<?xml version="1.0" encoding="UTF-8"?>

<!-- Dieses Schema dient der Zuordnung von Staffeln zu einer bestimmten Serie -->

<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">

	<!-- Schema fÃ¼r einzelne Serie inkludieren -->
	<xs:include schemaLocation="Season.xsd"/>

	<!-- Sammlung aller Staffel -->
	<xs:element name="seasons">
		<xs:complexType>
			<xs:sequence>
				<xs:element ref="season" maxOccurs="40"/>
			</xs:sequence>

			<xs:attribute ref="serieID" use="required"/>
		</xs:complexType>
	</xs:element>

	<!-- globale serieID Zuordnung -->
	<xs:attribute name="serieID" type="xs:positiveInteger"/>

</xs:schema>
