<?xml version="1.0" encoding="UTF-8"?>

<!-- Dieses Schema dient der Sammlung aller vorhandenen Serien -->
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">

	<!-- Element das alle Serien aufnimmt -->
	<xs:element name="series">
		<xs:complexType>
			<xs:sequence>
				<xs:element ref="serieID" maxOccurs="unbounded"/>
			</xs:sequence>
		</xs:complexType>
	</xs:element>

	<!-- globale serieID Zuordnung -->
	<xs:element name="serieID" type="xs:positiveInteger"/>

</xs:schema>
