<?xml version="1.0" encoding="UTF-8"?>

<!-- Dieses Schema dient als Containerelement aller Episoden einer bestimmten Season-->

<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">


	<!-- Sammlung zugehÃ¶riger Episoden einer Season -->
	<xs:element name="episodes">
		<xs:complexType>
			<xs:sequence>
				<xs:element ref="episodeID" maxOccurs="25"/>
			</xs:sequence>
		</xs:complexType>
	</xs:element>


	<!-- einzelne Episoden, globale "episodeID" Zuordnung -->
	<xs:element name="episodeID" type="xs:positiveInteger"/>

</xs:schema>

