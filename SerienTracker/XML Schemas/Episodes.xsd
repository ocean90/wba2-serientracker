<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">

	<xs:element name="episodes">
		<xs:complexType>
			<xs:sequence>
				<xs:element ref="episodeID" maxOccurs="unbounded"/>
			</xs:sequence>
		</xs:complexType>
	</xs:element>

	<!-- globale "episodeID" Zuordnung -->
	<xs:element name="episodeID" type="xs:positiveInteger"/>

</xs:schema>

