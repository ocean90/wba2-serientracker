<?xml version="1.0" encoding="UTF-8"?>

<!-- Dieses Schema dient der genaueren Beschreibung einer Episode mit entsprechenden Informationen -->

<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">

	<!-- Privat angelegte Liste eines Users -->
	<xs:element name="episode">
		<xs:complexType>
			<xs:sequence>
				<xs:element ref="number"/>
				<xs:element ref="name"/>
				<xs:element ref="overview"/>
				<xs:element ref="airdate"/>
				<xs:element ref="picture"/>
			</xs:sequence>

			<xs:attribute ref="serieID" use="required"/>
			<xs:attribute ref="seasonID" use="required"/>
			<xs:attribute ref="episodeID" use="required"/>
		</xs:complexType>
	</xs:element>

	<!-- Episodennummer der laufenden Staffel -->
	<xs:element name="number">
		<xs:simpleType>
			<xs:restriction base="xs:positiveInteger">
					<xs:maxInclusive value="25"/>
			</xs:restriction>
		</xs:simpleType>
	</xs:element>

	<!-- Episodenname -->
	<xs:element name="name">
		<xs:simpleType>
			<xs:restriction base="xs:string">
				<xs:minLength value="3"/>
				<xs:maxLength value="80"/>
			</xs:restriction>
		</xs:simpleType>
	</xs:element>
	
	<!-- Episodenbeschreibung -->
	<xs:element name="overview">
		<xs:simpleType>
			<xs:restriction base="xs:string">
				<xs:minLength value="10"/>
				<xs:maxLength value="500"/>
			</xs:restriction>
		</xs:simpleType>
	</xs:element>

	<!-- Austrahlungstag der Episode  -->
	<xs:element name="airdate" type="xs:dateTime"/>

	<!-- Bild zur Episode  -->
	<xs:element name="picture" type="xs:anyURI"/>


	<!-- globale episodeID Zuordnung -->
	<xs:attribute name="episodeID" type="xs:positiveInteger"/>

	<!-- globale seasonID Zuordnung -->
	<xs:attribute name="seasonID" type="xs:positiveInteger"/>

	<!-- globale serieID Zuordnung -->
	<xs:attribute name="serieID" type="xs:positiveInteger"/>
	
</xs:schema>
